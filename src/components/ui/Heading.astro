---
export interface Props {
  level?: "h1" | "h2" | "h3" | "h4"
  as?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6"
  class?: string
  [key: string]: any
}

const { level = "h1", as, class: className, ...props } = Astro.props

const Component = as ? as : level

const styles = {
  h1: "font-sans text-4xl md:text-5xl font-medium uppercase tracking-wide",
  h2: "font-sans text-2xl md:text-3xl font-medium uppercase tracking-wide",
  h3: "font-sans text-xl md:text-2xl font-medium uppercase tracking-wide",
  h4: "font-sans text-lg md:text-xl font-medium uppercase tracking-wide",
} as const

type HeadingLevel = keyof typeof styles

// ...
const stylesKey = level as HeadingLevel
const variantClass = styles[stylesKey]
const baseClass = "text-foreground"
const finalClass = `${baseClass} ${variantClass} ${className || ""}`
---

<Component class={finalClass} {...props}>
  <slot />
</Component>
