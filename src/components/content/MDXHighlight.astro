---
import { cn } from "../../lib/utils";

interface Props {
  color?:
    | "yellow"
    | "red"
    | "green"
    | "blue"
    | "purple"
    | "orange"
    | "pink"
    | (string & {});
  class?: string;
  style?: string | Record<string, any>;
  [key: string]: any;
}

const {
  color = "yellow",
  class: className,
  style,
  ...props
} = Astro.props;

const colorMap: Record<string, string> = {
  yellow:
    "bg-yellow-100 dark:bg-yellow-500/30 text-yellow-900 dark:text-yellow-100",
  red: "bg-red-100 dark:bg-red-500/30 text-red-900 dark:text-red-100",
  green: "bg-green-100 dark:bg-green-500/30 text-green-900 dark:text-green-100",
  blue: "bg-blue-100 dark:bg-blue-500/30 text-blue-900 dark:text-blue-100",
  purple:
    "bg-purple-100 dark:bg-purple-500/30 text-purple-900 dark:text-purple-100",
  orange:
    "bg-orange-100 dark:bg-orange-500/30 text-orange-900 dark:text-orange-100",
  pink: "bg-pink-100 dark:bg-pink-500/30 text-pink-900 dark:text-pink-100",
};

const isPreset = color in colorMap;
const colorClass = isPreset ? colorMap[color] : "";
const customStyle = !isPreset ? { backgroundColor: color } : {};

// Helper to merge styles
const mergedStyle =
  typeof style === "string"
    ? `${style}${!isPreset ? `; background-color: ${color}` : ""}`
    : { ...customStyle, ...style };
---

<span
  class={cn(
    "mx-0.5 rounded box-decoration-clone px-1 py-0.5",
    colorClass,
    className
  )}
  style={mergedStyle}
  {...props}
>
  <slot />
</span>
