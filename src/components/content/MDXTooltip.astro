---
import { cn } from "../../lib/utils";

interface Props {
  content: string;
  class?: string;
  [key: string]: any;
}

const { content, class: className, ...props } = Astro.props;
---

<span
  x-data
  x-tooltip.raw={content}
  class={cn(
    "decoration-muted-foreground hover:text-foreground hover:decoration-foreground cursor-help underline decoration-dotted underline-offset-4 transition-colors",
    className
  )}
  {...props}
>
  <slot />
</span>
