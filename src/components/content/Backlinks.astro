---
interface Backlink {
  title: string;
  url: string;
  type: string;
}

interface Props {
  backlinks?: Backlink[];
}

const { backlinks = [] } = Astro.props;

// Don't render if no backlinks
if (backlinks.length === 0) {
  return null;
}
---

<div class="border-border bg-background my-8 rounded-md border p-2.5 text-sm">
  <div class="flex flex-col gap-2">
    <div class="flex items-center gap-1.5">
      <svg
        class="text-muted-foreground h-3 w-3"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
        />
      </svg>
      <span class="text-muted-foreground text-xs font-medium tracking-wider uppercase">
        Backlinks ({backlinks.length})
      </span>
    </div>

    <div class="border-border space-y-1.5 border-t pt-2">
      {backlinks.map((link) => (
        <div class="overflow-hidden text-ellipsis whitespace-nowrap">
          <a
            href={link.url}
            class="text-muted-foreground hover:text-primary block text-xs transition-colors"
          >
            <span class="text-foreground font-medium">{link.type}</span>
            <span class="ml-1">{link.title}</span>
          </a>
        </div>
      ))}
    </div>
  </div>
</div>
