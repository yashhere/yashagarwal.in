---
import AnalogClock from '../../components/ui/AnalogClock.astro';

const currentYear = new Date().getFullYear();
const copyrightYear = currentYear === 2016 ? currentYear : `2016 - ${currentYear}`;
---

<footer class="border-border bg-background mt-auto w-full border-t-2">
  <div class="mx-auto max-w-3xl px-4 py-2 md:px-6">
    <div class="text-foreground/70 flex items-center justify-between text-base">
      {/* Left: Copyright */}
      <div>
        &copy; {copyrightYear} Yash Agarwal.
      </div>

      {/* Right: Social Links (Placeholder) */}
      <div class="flex items-center gap-4">
        <AnalogClock />
      </div>
    </div>
  </div>
</footer>
