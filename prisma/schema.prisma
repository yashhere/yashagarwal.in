generator kysely {
  provider    = "prisma-kysely"
  output      = "../lib"
  readOnlyIds = "true"
  fileName    = "db_types.ts"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model Stats {
  slug  String @unique
  views Int    @default(0)
  likes Int    @default(0)
}

model Session {
  id        String   @id
  createdAt DateTime @default(now())
  likes     Int      @default(0)
}
